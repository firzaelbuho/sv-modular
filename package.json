{
  "name": "sv-modular",
  "version": "1.0.0",

  "description": "CLI Generator for SvelteKit Modular Architecture",
  "license": "MIT",
  "author": "firzaelbuho",

  "module": "dist/cli.js",
  "type": "module",
  "bin": {
    "sv-modular": "./dist/cli.js"
  },

  "files": [
